<% if(flashMessage.length > 0){ %><%- flashMessage %><% }; %>
<!-- NAVIGATION -->
<div class="nav_wrapper">
    <label for="collapse_menu" id="collapse_btn">__</label>
    <input id="collapse_menu" type="checkbox">
    <nav>
        <h1>Realtime Slackbot</h1>
        <ul>

                <%
                    for(var i = 0;i<page.nav.length;i++){
                        if(page.nav[i].type == 'head'){
                %>
                            <li>
                                <a href="<%= page.nav[i].href %>"><%= page.nav[i].title %></a>
                            </li>
                <%
                        }else if(page.nav[i].type == 'sub'){
                %>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= page.nav[i].title %> <span class="caret"></span></a>
                                <ul class="dropdown-menu">

                                    <% for(var ii = 0;ii<page.nav[i].menus.length;ii++){ %>

                                    <li><a href="<%= page.nav[i].menus[ii].href %>"><%= page.nav[i].menus[ii].title %></a></li>
                                    
                                    <% } %>

                                </ul>
                            </li>
                <%
                        }
                    }
                %>
        </ul>

    </nav>
</div>

<header>
    <h1><%= page.title %></h1>
</header>